function encode($string, $protected = false) {
	$newString = '';
	for ($i = 0; isset($string[$i]); $i++) {
		$char = $string[$i];
		$dec = ord($char);
		if ($protected === false) {
			$newString .= '&#' . $dec . ';';
		} else {
			$newString .= '&amp;#'.$dec.';';
		}
	}
	return $newString;
}

